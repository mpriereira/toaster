{
  "name": "@mpriereira/toaster",
  "version": "0.0.1",
  "description": "Library to show toast notifications in your website",
  "type": "module",
  "files": [
    "/dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "lint": "ts-standard ./src",
    "lint:fix": "ts-standard --fix ./src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Mario Prieto",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.12.0",
    "rollup-plugin-css-only": "^4.5.2",
    "ts-standard": "12.0.2",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "ignorePatterns": [
      "/*",
      "!/src"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/space-before-function-paren": "off"
    }
  }
}
